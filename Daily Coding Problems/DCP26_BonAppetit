/*
https://www.hackerrank.com/challenges/bon-appetit/problem
*/

 static void bonAppetit(List<Integer> bill, int k, int b) {
            int average=0;
            for(int i=0;i<bill.size();i++){
                if(i!=k)
                average+=bill.get(i);
            }
            average=average/2;
            if(average==b){
                System.out.println("Bon Appetit");
            }
            else
            System.out.println(b-average);

    }
